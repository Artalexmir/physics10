#include <iostream>

using namespace std;

int main()
{
int n;
int s=0;
int p;
int m;
int r;
cin >> n;
int *A=new int[n];
for(int i=0; i<n; i++)
{
    cin>>A[i];
    s+=A[i];
}
s=s/n;
for(int i=0; i<(n-1); i++)
{
    if(A[i]>A[i+1])
    {
        p=A[i+1];
        for(int j=i; j>0; j--)
        {
            if(p<A[j])
                A[j+1]=A[j];
            else
            {
                A[j+1]=p;
                j=0;
            }
        }
        if(A[0]>p)
        {
            A[1]=A[0];
            A[0]=p;
        }
        else
            A[1]=p;
    }
}
m=A[(n-1)/2];
if(s>m)
    r=s-m;
else
    r=m-s;
cout<<r;
delete [] A;
return 0;
}
